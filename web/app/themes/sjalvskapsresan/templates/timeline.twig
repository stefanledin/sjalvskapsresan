<section class="timeline">
    <header class="timeline__item timeline__item--header">
        <span>Självskapsresan<br>T-minus <time>19/17:20:20</time></span>
        <span>Självskapsresan<br>T-minus <time>{{ trip_timer }}</time></span>
    </header>
    {% for day in timeline %}
        <div class="timeline__item timeline__item--day">
            <span class="timeline__item__heading">{{ function('ucfirst', day.date|date('l')) }}</span>
            <span>{{ day.date|date('j M') }}</span>
        </div>
        {% for event in day.schedule %}
            <div class="timeline__item">
                <span class="timeline__item__heading">{{ event.city }}</span>
                <span>{{ event.arrival_departure }}</span>
            </div>
        {% endfor %}
    {% endfor %}
